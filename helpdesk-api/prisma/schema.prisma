generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(CLIENT)
  createdAt DateTime @default(now())

  calls Call[]
}

enum Role {
  ADMIN
  TEC
  CLIENT
}

model Call {
  id                    Int      @id @default(autoincrement())
  title                 String
  description           String?
  category              String
  total                 Decimal?
  additionalServices    String   @default("[]")  // JSON array stored as string
  status                String   @default("open")
  technicianName        String?
  userId                Int
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  user                  User     @relation(fields: [userId], references: [id])
}
